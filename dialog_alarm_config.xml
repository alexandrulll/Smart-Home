<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Alarm config"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label_4"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:text="Value"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_4"
        android:id="@+id/et_value"
        android:inputType="numberDecimal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label_1"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/et_value"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:text="Alarm label"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_1"
        android:id="@+id/et_alarm_label"
        android:inputType="textCapSentences"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label_2"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/et_alarm_label"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:text="Generating entity"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_2"
        android:id="@+id/et_generating_entity"
        android:inputType="textCapSentences"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancel"
        android:text="cancel"
        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"
        android:layout_below="@id/et_generating_entity"
        android:layout_toStartOf="@id/btn_done"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_done"
        android:text="done"
        android:background="@android:color/transparent"
        android:layout_below="@id/et_generating_entity"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText" />

</RelativeLayout>