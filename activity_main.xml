<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/butonAchizitie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_round_accent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="@string/buttonAchizitie" />

    <Button
        android:id="@+id/butonSupraveghere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_round_accent"
        android:paddingStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/white"
        android:layout_below="@id/butonAchizitie"
        android:text="@string/buttonSupraveghere" />

    <Button
        android:id="@+id/butonControlEchipament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_round_accent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@id/butonSupraveghere"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:text="@string/buttonControl" />

    <Button
        android:id="@+id/btn_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_round_accent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@id/butonControlEchipament"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:text="Configurare Alarme Temperatura"
        tools:ignore="HardcodedText" />

</RelativeLayout>